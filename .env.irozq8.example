# Domain Configuration
NEXT_PUBLIC_DOMAIN=irozq8.com
NEXT_PUBLIC_BASE_URL=https://irozq8.com
NODE_ENV=production

# Optional: Twitch Integration
# Get these from: https://dev.twitch.tv/console/apps
NEXT_PUBLIC_TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here
